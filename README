Use http://overpass-turbo.eu/ and run following query to get roads for Plymouth Michigan

/*
This has been generated by the overpass-turbo wizard.
The original search was:
“(highway=primary or highway=secondary or highway=tertiary or highway=residential) and type:way”
*/
[out:json][timeout:25];
// gather results
(
  // query part for: “highway=primary”
  way["highway"="primary"](42.3435,-83.5195,42.3943,-83.3981);
  // query part for: “highway=secondary”
  way["highway"="secondary"](42.3435,-83.5195,42.3943,-83.3981);
  // query part for: “highway=tertiary”
  way["highway"="tertiary"](42.3435,-83.5195,42.3943,-83.3981);
  // query part for: “highway=residential”
  way["highway"="residential"](42.3435,-83.5195,42.3943,-83.3981);
  way["highway"="motorway"](42.3435,-83.5195,42.3943,-83.3981);
);
// print results
out body;
>;
out skel qt;

